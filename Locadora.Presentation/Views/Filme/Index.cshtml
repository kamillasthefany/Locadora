@model X.PagedList.IPagedList<Locadora.Application.DTOs.FilmeDTO>
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@using X.PagedList.Web.Common;

@{
    ViewData["Title"] = "Index";
}

<main class="container">
    <div class="row d-flex">
        <div class="col-md-9">
            <a class="btn btn-primary" asp-controller="Filme" asp-action="Create">Cadastrar Filme</a>
        </div>  
        <div class="col-md-3">
            <form>         
                <div class="input-group">
                    <div class="form-outline">
                        <input type="text" id="busca" name="busca" class="form-control" placeholder="Pesquisa" />
                    </div>
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-secondary">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <br />
    <div class="row d-flex justify-content-start">
        @foreach (var item in Model)
        {
            <div class="col-sm-3 p-4">
                <div class="row border rounded overflow-hidden flex-md-row shadow-sm position-relative">
                    <div class="col p-4 d-flex flex-column position-static" style="align-items: center;">
                        <img src="@Url.Action("ObterCapa", "Filme", new { id = item.Id })" width="150" height="200" style="border-radius: 5px;" />
                    </div>
                    <div class="col p-2 d-flex flex-column position-static" style="align-items: center;">
                        <strong class="d-inline-block mb-2 text-primary">@item.Titulo.ToUpper()</strong>
                        <p class="card-text mb-auto">@item.Descricao</p>
                    </div>
                    <div class="col p-4 d-flex flex-row position-static" style="align-items: center;">
                        <a class="btn btn-outline-secondary btn-sm m-1" asp-controller="Filme" asp-action="Details" asp-route-id="@item.Id">
                            Detalhes
                        </a>
                        <a class="btn btn-outline-primary btn-sm m-1" asp-controller="Filme" asp-action="Edit" asp-route-id="@item.Id">
                            Editar
                        </a>
                        <a class="btn btn-outline-danger btn-sm m-1" asp-controller="Filme" asp-action="Delete" asp-route-id="@item.Id">
                            Deletar
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="row d-flex">
        <div class="col-md-8">
            @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { pagina = page }), new PagedListRenderOptions
            {
                LiElementClasses = new string[] { "page-item" },
                PageClasses = new string[] { "page-link" }
            })
        </div>
        @*<div class="col-md-4">
            <span class="pull-right">
                @Model.FirstItemOnPage a @Model.LastItemOnPage de @Model.TotalItemCount
            </span>
        </div>*@
    </div>
</main>