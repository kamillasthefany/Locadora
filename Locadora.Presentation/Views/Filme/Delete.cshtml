@model Locadora.Application.DTOs.FilmeDTO

@{
    ViewData["Title"] = "Deletar";
}

<strong>Tem certeza que quer deletar esse item?</strong>
<div>
    <br />
    <dl class="row">       
        <dt class = "col-sm-1">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class = "col-sm-11">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-1">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-11">
            @Html.DisplayFor(model => model.Descricao)
        </dd>        
    </dl>
    <div>
        <img src="@Url.Action("ObterCapa", "Filme", new {  id = Model.Id  })" width="200" height="250" style="border-radius: 5px;" />
    </div>
    <br />
    <form asp-action="Delete">     
        <a class="btn btn-outline-secondary btn-sm" asp-action="Index">Voltar</a>
        <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
    </form>
</div>
